{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }] ,
        "no-multiple-empty-lines": [
            1,
            {
                "max": 1,
                "maxEOF": 0
            }
        ],
        "no-console": [
            "warn",
            {
                "allow": [
                    "clear",
                    "info",
                    "error",
                    "dir",
                    "trace"
                    
                ]
            }
        ]
    }
}